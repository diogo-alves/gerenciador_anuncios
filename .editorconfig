# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Adiciona um caractere de nova linha estilo Unix (\n) no fim de cada arquivo
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Usa 4 espaços para arquivos python
# Limita o tamanho da linha para 119 caracteres (convenção do Django)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

# Usa 3 espaços para arquivos html
[*.html]
indent_size = 2

# Usa 4 espaços para arquivos javscript
[*.js]
indent_style = space
indent_size = 4

# Arquivos javascript minificados não devem ser alterados
[**.min.js]
indent_style = ignore
insert_final_newline = ignore
